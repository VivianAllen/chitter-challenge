<!DOCTYPE hmtl>
<html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Chitter Index Page</title>
  </head>
  <style>
    li {
      border: 1px solid black;
      background-color: grey
    }
  </style>
  <body>
    <form action='/peeps/add_peep' method='post'>
      <label for='new_peep_text'>
        New peep:
        <input type='text' name='new_peep_text'>
      </label>
      <button type='submit'>Post</button>
    </form>
    <ul style="list-style-type:none">
      <%@peeps.each do |peep|%>
      <li id="<%=peep.id%>">
        <p>
          <b><%=peep.time%></b><br>
          <%=peep.text%>
        </p>
      </li>
      <br>
      <%end%>
    </ul>
  </body>
</html>
