<!DOCTYPE hmtl>
<html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Chitter Index Page</title>
  </head>
  <style>
    * {
      font-family: helvetica;
    }
    li {
      border: 1px solid black;
      background-color: grey;
      text-align: center;
    }
  </style>
  <body>
    <h2><%=@welcome_msg%></h2>
    <form action='/chitter/sign_up' method='post'>
      <button type='submit'>Sign Up</button>
    </form>
    <form action='/chitter/add_peep' method='post'>
      <label for='new_peep_text'>
        New peep:
        <input type='text' name='new_peep_text'>
      </label>
      <button type='submit'>Post</button>
    </form>
    <ul style="list-style-type:none">
      <%@peeps.each do |peep|%>
      <li id="<%=peep.id%>">
        <p>
          <%=peep.text%><br>
          <i>Peeped by <%=peep.author%> <%=peep.readable_time%></i>
        </p>
      </li>
      <br>
      <%end%>
    </ul>
  </body>
</html>
